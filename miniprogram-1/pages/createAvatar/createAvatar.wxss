.scroll-wrap {
  width: 100%;
  box-sizing: border-box;
  background: #ffffff;
}
.scroll {
  height: 100%;
  box-sizing: border-box;
}
.scroll-x {
  display: flex;
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
}
.scroll-item {
  /* width: 138rpx; */
  height: 8rem;
  width:8rem;
  display: inline-block;
  margin-right: 10rpx;
  padding: 0 24rpx 27rpx;
  font-size: 24rpx;
  color: #4e4e4e;
  font-family: PingFangSC-Regular, PingFang SC;
}
.scroll-bar {
  background: #ffffff;
}
.scroll-bar__bg {
  position: relative;
  width: 200rpx;
  height: 6rpx;
  background: #d4d8dd;
  border-radius: 5px;
  margin: 0 auto;
  overflow: hidden;
}
.scroll-bar__slide {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: rgba(233, 89, 14, 1);
  border-radius: 5px;
}
