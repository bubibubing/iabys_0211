/* miniprogram-1/pages/displayCard/displayCard.wxss */
.showCardPage {
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  background-size: 100% 100%;
}

.gachaShowGif {
  background-size: 100% 100%;
  position:fixed;
  padding:0;
  margin:0;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.gachaShowGif image {
  position: absolute; 
   left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 480rpx;
  width: 480rpx;
}

.gachaShowCard {
  display:flex;
  justify-content: center;
}

.gachaShowCard image {
  height: 480rpx;
  width: 480rpx;
}

.flip-btn {
  margin-top: 100rpx;
  width: 520;
  border-radius:30px;
  background: rgb(128, 192, 165);
}

.flip-btn::after {
  border: none; 
}

